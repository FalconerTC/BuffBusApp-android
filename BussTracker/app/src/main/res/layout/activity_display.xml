<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff6be"
    tools:context="app.com.main.UIController">

    <fragment android:name="com.cherish.busstracker.activity.Fragments.BussSelectorFragment"
        android:id="@+id/selector_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:layout="@layout/fragment_buss_selector" />

    <fragment android:name="com.cherish.busstracker.activity.Fragments.BussTimesFragment"
        android:id="@+id/times_fragment"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_below="@id/selector_fragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:layout="@layout/fragment_buss_times" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/times_fragment"/>

</RelativeLayout>
